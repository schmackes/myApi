class DestinationMatrixController < ApplicationController
  require 'httparty'
  def index
  end

  def show
    redirect_to destination_matrix_path
  end

  #runs the service
  def call
    service_object = DestinationMatrix.get_service_object

    response = HTTParty.get(service_object.url, service_object.params)

    parsed_json = ActiveSupport::JSON.decode(response)

    puts "JSON: "+parsed_json
    redirect_to api_destination_matrix_path
  end
end
